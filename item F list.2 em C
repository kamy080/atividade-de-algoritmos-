#include <stdio.h>

int main() {
    // Declaração de variáveis
    float raio, altura, volume;
    const float pi = 3.14;

    // Entrada de dados
    printf("Informe o valor do raio: ");
    scanf("%f", &raio);

    printf("Informe o valor da altura: ");
    scanf("%f", &altura);

    // Processamento
    volume = pi * raio * raio * altura;

    // Saída de dados
    printf("O valor do volume interno do recipiente é %.2f L\n", volume);

    return 0;
}
